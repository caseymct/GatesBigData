<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">


    <context:component-scan base-package="LucidWorksApp"/>

	<mvc:annotation-driven />
    <mvc:view-controller path="/" view-name="index" />
    <mvc:view-controller path="/index.html" view-name="index" />
    <mvc:view-controller path="/search" view-name="search" />

    <mvc:view-controller path="/collection/{collectionName}" view-name="collectionDetails"/>
    <mvc:view-controller path="/collection/{collectionName}/datasource/{datasourceId}" view-name="datasourceDetails"/>
    <mvc:view-controller path="/collection/{collectionName}/type/web/datasource/{datasourceId}" view-name="datasourceTypes/webdatasource"/>
    <mvc:view-controller path="/collection/{collectionName}/type/importcsv/datasource/{datasourceId}" view-name="datasourceTypes/importcsv"/>


</beans>