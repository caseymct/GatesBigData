<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">


    <context:component-scan base-package="LucidWorksApp"/>

	<mvc:annotation-driven />
    <mvc:view-controller path="/" view-name="index" />
    <mvc:view-controller path="/index.html" view-name="index" />
    <mvc:view-controller path="/search/NA_data" view-name="search/NA_data" />
    <mvc:view-controller path="/search/test_data" view-name="search/test_data" />
    <mvc:view-controller path="/core/document/view" view-name="documentView" />
    <mvc:view-controller path="/core/document/viewtest" view-name="documentViewerTest" />
    <mvc:view-controller path="/core/document/export" view-name="export/NA_export" />

</beans>